<div id="top_requests">
  <div class="mytable" style="width:350px;">
	  <table >
		  <tr>
			  <td>
				  Top Requests
			  </td>
		  </tr>
  <% @songs.each do |song| %>
    <% unless ((song.inactive == true) && (song.reputation_for(:votes).to_i <= 2)) %>
	    <tr>
	      <td>
	      <%= song.song_title %><br/>
        (<%= pluralize song.reputation_for(:votes).to_i, "vote" %>) - (Req: <%= song.requester %>)
        </td>
	    </tr>
    <% end %>
  <% end %>
    </table>
  </div>
</div>
